@page
@model BusManagement.EditModel
@{
    ViewData["Title"] = "Edit";
    var pageHeader = Model.Employee.Id > 0 ? "Edit" : "Create";
}

<h2>@pageHeader</h2>

<form method="post" class="mt-3">
    <input hidden asp-for="Employee.Id" />

    <div class="form-group row">
        <label asp-for="Employee.Name" class="col-sm-2 col-form-label">

        </label>
        <div class="col-sm-10">
            <input asp-for="Employee.Name" class="form-control" placeholder="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Employee.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Email" class="form-control" placeholder="Email" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Employee.From" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Employee.From" class="custom-select media-right -sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value=""> Please Select</option>
            </select>
        </div>
    </div>
   <div class="form-group row">
    <label asp-for="Employee.To" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="Employee.To" class="custom-select media-right -sm-2"
                asp-items="Html.GetEnumSelectList<Dept>()">
            <option value=""> Please Select</option>
        </select>
    </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employee.DT" class="col-sm-2 col-form-label">

        </label>
        <div class="col-sm-10">
            <input asp-for="Employee.DT" class="form-control" placeholder="DateTime" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary"> Update</button>
            <a asp-page="/Employees/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>